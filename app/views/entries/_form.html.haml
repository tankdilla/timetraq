= form_for [@user, @activity, @entry] do |f|
  -if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start_time
    = f.text_field :start_time
  Duration:
  .field
    = f.label :hours
    = f.text_field :hours
    = f.label :minutes
    = f.text_field :minutes
  .field
    = f.label :note
    = f.text_field :note
  .field
    = f.label :score
    = f.number_field :score
  .actions
    = f.submit 'Save'
