= form_for [@user, @activity, @entry] do |f|
  -if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :note
    = f.text_field :note
  .field
    = f.label :score
    = f.number_field :score
  .field
    = label_tag :start_time
    = text_field_tag :start_time
  .field
    = label_tag :number_of_hours
    = text_field :number_of_hours
  .field
    = label_tag :number_of_minutes
    = text_field :number_of_minutes
  .actions
    = f.submit 'Save'
