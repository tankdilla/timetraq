= form_for @entry do |f|
  -if @entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@entry.errors.count, "error")} prohibited this entry from being saved:"
      %ul
        - @entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :note
    = f.text_field :note
  .field
    = f.label :score
    = f.number_field :score
  .actions
    = f.submit 'Save'
